<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="246dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <com.nuoxin.enterprise.widget.CircleImageView
        android:id="@+id/avtar_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_user_avater"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        app:border_color="@color/app_bg"
        app:border_width="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_black_text"
            android:textSize="@dimen/sp_16"
            />
        <TextView
            android:id="@+id/department_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/sp_14"
            android:textColor="#a4a4a4"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_22"
        android:orientation="horizontal"
        >
        <com.nuoxin.enterprise.widget.DrawableCenterTextView
            android:id="@+id/email_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_doctor_email"
            android:drawablePadding="@dimen/dp_4"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#999898"
            android:textSize="@dimen/sp_12"
            />
        <com.nuoxin.enterprise.widget.DrawableCenterTextView
            android:id="@+id/mobile_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_doctor_phone"
            android:drawablePadding="@dimen/dp_4"
            android:textSize="@dimen/sp_12"
            android:textColor="#999898"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999898"
            android:textSize="@dimen/sp_16"
            android:text="@string/involved_project"/>
        </LinearLayout>

</LinearLayout>
